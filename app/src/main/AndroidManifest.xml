<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cm.pikachua">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/pikachua"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/pikachua"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity android:name="com.cm.pikachua.MapsActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.cm.pikachua.StorageActivity" android:screenOrientation="portrait" />
        <activity android:name="com.cm.pikachua.CollectionActivity" android:screenOrientation="portrait" />
        <activity android:name="com.cm.pikachua.BagActivity" android:screenOrientation="portrait" />
        <activity android:name="com.cm.pikachua.SettingsActivity" android:screenOrientation="portrait" />
        <activity android:name="com.cm.pikachua.ProfileActivity" android:screenOrientation="portrait" ></activity>
    </application>

</manifest>