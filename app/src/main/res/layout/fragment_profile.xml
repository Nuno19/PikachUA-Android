<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context="com.cm.pikachua.ProfileFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/button_back"
        android:layout_width="45sp"
        android:layout_height="45sp"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="20sp"
        android:scaleType="center"
        android:src="@drawable/btn_back_normal_white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title1"
        android:gravity="center|top"
        android:layout_marginTop="20sp"
        android:layout_width="match_parent"
        android:textSize="30sp"
        android:layout_height="match_parent"
        android:text="@string/profile" />

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ProfileFragment">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/image"
                android:layout_marginLeft="40sp"
                android:layout_marginRight="40sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/jv_7adtj"/>

            <TextView
                android:id="@+id/username"
                android:layout_marginLeft="40sp"
                android:layout_marginTop="480sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textSize="15sp" >
            </TextView>

            <TextView
                android:id="@+id/startDate"
                android:layout_marginLeft="40sp"
                android:layout_marginTop="520sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textSize="15sp" >
            </TextView>

            <TextView
                android:id="@+id/totalMonstersCaught"
                android:layout_marginLeft="40sp"
                android:layout_marginTop="560sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textSize="15sp" >
            </TextView>

            <TextView
                android:id="@+id/totalEXP"
                android:layout_marginLeft="40sp"
                android:layout_marginTop="600sp"
                android:layout_marginBottom="20sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textSize="15sp" >
            </TextView>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>
